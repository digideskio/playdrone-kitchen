description "unicorn"

respawn
respawn limit 10000 30
kill timeout 10

env SOCK="<%= @app_path %>/shared/pids/unicorn.sock"
env APP_PATH="<%= @app_path %>/current"
env RVM_ENV="<%= @rvm_env %>"
env RAILS_ENV=production

setuid deploy
setgid deploy

script
  cd $APP_PATH
  rm -f $SOCK
  exec /usr/local/rvm/bin/rvm-exec $RVM_ENV bundle exec unicorn -c ./config/unicorn.rb
end script
